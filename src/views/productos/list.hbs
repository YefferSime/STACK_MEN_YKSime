<div class="container" style="margin-top:70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Productos</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page" href="/producto/add">Agregar Producto</a></button>
        </div>

        {{#if productos}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="col-4">Nombre</th>
                    <th scope="col">precio</th>
                    <th scope="col">categoria</th>
                    <th scope="col">Acciones</th>

                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <td>{{nombre_producto}}</td>
                    <td>{{precio}}</td>
                    <td>{{nombre_categoria}}</td>
     
                    <td>
                        <div class="">
                            <a href="/producto/edit/{{id_producto}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>Actualizar</a>
                            <a href="/producto/delete/{{id_producto}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="5">REGISTRO DE PRODUCTOS</td>
                </tr>
            </tfoot>
        </table>
        </div>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Debes crear una persona</h3>
            </div>
            <div class="card-body">
                <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
                <a href="/categoria/add" class="btn btn-primary">Ir a crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>