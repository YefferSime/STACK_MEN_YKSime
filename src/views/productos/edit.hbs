<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form action="/producto/edit/{{producto.id_producto}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombre_producto" id="nombre_producto" placeholder="Nombres"
                                value="{{producto.nombre_producto}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Precio</label>
                            <input class="form-control" type="text" name="precio" id="precio" placeholder="Apellidos"
                                value="{{producto.precio}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="categoria" class="input-group-text">Categor√≠a</label>
                            <select class="form-select" name="id_categoria" id="id_categoria" required>
                                {{#each categorias}}
                                {{#if (isEqual this.id_categoria ../producto.id_categoria )}}
                                <option value="{{this.id_categoria}}" selected>{{this.nombre_categoria}}</option>
                                {{else}}
                                <option value="{{this.id_categoria}}">{{this.nombre_categoria}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar</button>
                            <button class="btn btn-danger"><a class="nav-link link-light" aria-current-"page"
                                    href="/producto/list"> Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>